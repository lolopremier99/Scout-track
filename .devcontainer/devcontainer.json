{
  "name": "Environment Grand Maitre",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-18",

  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 2,
        "files.autoSave": "afterDelay",
        "workbench.colorTheme": "Default Dark+"
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "ritwickdey.LiveServer"
      ]
    }
  },

  "postCreateCommand": "npm install && node server.js && cp .devcontainer/keybindings.json /home/vscode/.config/Code/User/keybindings.json",

  "forwardPorts": [3000]
}
